<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.3/dist/leaflet.css"
    integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
    crossorigin=""/>
  </head>
  <body>
    <header  class="row col span_12_of_12">
      <h1>Liste des balades</h1>
    </header>
    <main  class="row">
      <section class="col span_7_of_12">
        <div class="row">
          <% roads.forEach((e) =>{  %>
            <article class="js-road card col span_4_of_12" data-distance="<%= e.routes[0].distance %>" data-duration="<%= e.routes[0].duration %>"data-geometry="<%= e.routes[0].geometry %>">
              <header>
                <figure class="avatar" elevation="1"></figure>
                <div class="userName">
                  <p><%= faker.internet.userName() %></p>
                </div>
                <h3 class="card-title"><%= faker.lorem.words(3) %></h3>
              </header>
              <figure class="rich_media" id="image_1"></figure>
              <div class="supporting_text">
                <p><%= faker.lorem.sentence(5) %></p>
              </div>
            </article>
          <%  }) %>
        </div>
      </section>
      <aside class="col span_5_of_12">
        <div id="map"></div>
      </aside>
    </main>
  </body>
</html>
